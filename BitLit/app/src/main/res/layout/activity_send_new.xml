<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cse.bikky.bitlit.Send_new"
    android:background="?attr/colorButtonNormal">

    <TextView
        android:layout_width="300dp"
        android:id="@+id/textView7"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/zero_btn"
        android:layout_alignEnd="@+id/zero_btn"
        android:layout_marginTop="19dp"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <TextView
        android:text=" "
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/textView6"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_below="@+id/clr_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/one_btn"
        android:background="@drawable/round_btn"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zero_btn"
        android:background="@drawable/round_btn"
        android:layout_alignBaseline="@+id/one_btn"
        android:layout_alignBottom="@+id/one_btn"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/clr_btn"
        android:background="@drawable/round_btn"
        android:layout_below="@+id/one_btn"
        android:layout_alignLeft="@+id/one_btn"
        android:layout_alignStart="@+id/one_btn"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Send"
        android:background="@drawable/round_btn"
        android:layout_above="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

</RelativeLayout>
