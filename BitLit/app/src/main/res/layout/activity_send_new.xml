<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cse.bikky.bitlit.Send_new"
    android:background="@color/colorPrimary">

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/one_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:id="@+id/zero_btn"
        android:background="@drawable/round_btn" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one_btn"
        android:layout_alignLeft="@+id/one_btn"
        android:layout_alignStart="@+id/one_btn"
        android:layout_marginTop="56dp"
        android:id="@+id/clr_btn"
        android:background="@drawable/round_btn" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/clr_btn"
        android:layout_alignLeft="@+id/zero_btn"
        android:layout_alignStart="@+id/zero_btn"
        android:id="@+id/Send"
        android:background="@drawable/round_btn" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/one_btn"
        android:background="@drawable/round_btn"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="300dp"
        android:id="@+id/textView7"
        android:layout_height="50dp"
        android:text="String"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/zero_btn"
        android:layout_alignEnd="@+id/zero_btn"
        android:layout_marginTop="19dp" />

    <TextView
        android:text=" "
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/clr_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

</RelativeLayout>
