<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cse.bikky.bitlit.MainActivity"
    android:background="?attr/colorButtonNormal">

    <Button
        android:text="SEND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_send"
        android:background="@drawable/round_btn"
        android:layout_alignBaseline="@+id/button_recieve"
        android:layout_alignBottom="@+id/button_recieve"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Welcome to BITLIT "
        android:layout_width="300dp"
        android:id="@+id/textView"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:background="?attr/colorButtonNormal"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:fontFamily="casual" />

    <Button
        android:text="SEND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        android:background="@drawable/round_btn"
        android:elevation="16dp"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/button_exit"
        android:layout_alignLeft="@+id/button_send"
        android:layout_alignStart="@+id/button_send"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <Button
        android:text="RECEIVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_recieve"
        android:background="@drawable/round_btn"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/send"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <Button
        android:text="RECEIVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/send"
        android:layout_alignRight="@+id/button_recieve"
        android:layout_alignEnd="@+id/button_recieve"
        android:id="@+id/btn_rcvnw"
        android:background="@drawable/round_btn"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <TextView
        android:text="BITS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_recieve"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:fontFamily="casual" />

    <TextView
        android:text="BYTES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="24sp"
        android:fontFamily="casual"
        android:layout_alignBaseline="@+id/btn_rcvnw"
        android:layout_alignBottom="@+id/btn_rcvnw"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="INFO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ppl"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:elevation="24dp" />

    <Button
        android:text="EXIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_exit"
        android:background="@color/colorAccent"
        android:layout_above="@+id/ppl"
        android:layout_toRightOf="@+id/send"
        android:layout_toEndOf="@+id/send"
        android:elevation="24dp" />
</RelativeLayout>
