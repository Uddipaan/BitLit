<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cse.bikky.bitlit">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SendActivity" />
        <activity android:name=".RcvActivity" />
        <activity android:name=".Send_new" />
        <activity android:name=".intermediate_send" />
        <activity android:name=".Send_char" />
        <activity android:name=".intermediate_recv" />
        <activity android:name=".fnc_recv" />
        <activity android:name=".rcv_bit"></activity>
    </application>

</manifest>